+WindowSurfaceWayland::Commit(const LayoutDeviceIntRegion& aInvalidRegion)
+{
+  MOZ_ASSERT(mBuffers[mFrontBuffer], "Attempted to commit invalid surface!");  
+  mBuffers[mFrontBuffer]->Attach(mSurface, aInvalidRegion);
