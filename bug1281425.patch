+  if (!mBuffers[0] || !mBuffers[0]->IsAttached()) {
+    mFrontBuffer = 0;
+  } else if (!mBuffers[1] || !mBuffers[1]->IsAttached()) {
+    mFrontBuffer = 1;
+  } else {
